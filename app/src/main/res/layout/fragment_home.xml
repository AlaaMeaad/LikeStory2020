<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aa"
    android:layoutDirection="rtl"
    tools:context=".ui.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:paddingBottom="@dimen/_30sdp"
        android:focusableInTouchMode="true">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <TextView
            android:id="@+id/tv_error"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@android:color/holo_red_dark"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@id/end"
            app:layout_constraintStart_toEndOf="@id/start"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:fontFamily="@font/cairo_bold"
            android:text="هذا البرنامج يتيح لك زيادة عدد الاعجابات بمنشورك سواء كان على الفيس بوك او الانستجرام او تويتر او اليوتيوب ويضمن لك الامان لحسابك"
            android:textAlignment="center"
            android:textColor="@color/cardview_light_background"
            android:textSize="@dimen/_16sdp"
            app:layout_constraintEnd_toStartOf="@id/end"
            app:layout_constraintStart_toEndOf="@id/start"
            app:layout_constraintTop_toBottomOf="@id/tv_error" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo_semibold"
            android:gravity="center"
            android:text="فيس بوك"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="#336BE4"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintStart_toEndOf="@id/start"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />
<LinearLayout
    android:layout_width="0dp"
    android:layout_height="@dimen/_50sdp"
    android:orientation="horizontal"
    android:id="@+id/line1"
    android:background="#336BE4"
    app:layout_constraintEnd_toStartOf="@id/end"
    app:layout_constraintStart_toEndOf="@id/start"
    app:layout_constraintTop_toBottomOf="@id/tv_name"
    android:paddingStart="@dimen/_10sdp"
    android:paddingTop="@dimen/_5sdp"
    android:paddingEnd="@dimen/_10sdp"
    android:paddingBottom="@dimen/_5sdp"
    android:gravity="center"
    >

    <ImageView
        android:id="@+id/et_name"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/ic_facebook_square_brands" />
</LinearLayout>
        <TextView
            android:id="@+id/tv_surname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo_semibold"
            android:gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="تويتر"
            android:textColor="#00acee"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintStart_toEndOf="@id/start"
            app:layout_constraintTop_toBottomOf="@id/line1" />
<LinearLayout
    android:layout_width="0dp"
    android:layout_height="@dimen/_50sdp"
    android:orientation="horizontal"
    android:id="@+id/line2"
    android:background="#00acee "
    app:layout_constraintEnd_toStartOf="@id/end"
    app:layout_constraintStart_toEndOf="@id/start"
    app:layout_constraintTop_toBottomOf="@id/tv_surname"
    android:paddingStart="@dimen/_10sdp"
    android:paddingTop="@dimen/_5sdp"
    android:paddingEnd="@dimen/_10sdp"
    android:paddingBottom="@dimen/_5sdp"
    android:gravity="center">

        <ImageView
            android:id="@+id/et_surname"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/ic_twitter_square_brands"
             />
</LinearLayout>

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo_semibold"
            android:gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="انستجرام"
            android:textColor="#C932C1"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintStart_toEndOf="@id/start"
            app:layout_constraintTop_toBottomOf="@id/line2" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal"
            android:id="@+id/line3"
            android:background="#C932C1 "
            app:layout_constraintEnd_toStartOf="@id/end"
            app:layout_constraintStart_toEndOf="@id/start"
            app:layout_constraintTop_toBottomOf="@id/tv_phone"
            android:paddingStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:gravity="center">
        <ImageView
            android:id="@+id/et_phone"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/ic_instagram_brands"
             />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo_semibold"
            android:gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="يوتيوب"
            android:textColor="#c4302b"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintStart_toEndOf="@id/start"
            app:layout_constraintTop_toBottomOf="@id/line3" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal"
            android:id="@+id/line4"
            android:background="#c4302b "
            app:layout_constraintEnd_toStartOf="@id/end"
            app:layout_constraintStart_toEndOf="@id/start"
            app:layout_constraintTop_toBottomOf="@id/tv_email"
            android:paddingStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:gravity="center">

        <ImageView
            android:id="@+id/et_email"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/ic_youtube_brands"

            />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>